#!/usr/bin/env bash

# You can call this script like this:
# $./volume.sh up
# $./volume.sh down
# $./volume.sh mute

function get_volume {
  local volume
  echo $(pamixer --get-volume)
}

function is_mute {
  if [[ $(pamixer --get-mute) == "true" ]]; then
    return 0 # success, true (muted)
  else
    return 1 # failure, false (not muted)
  fi
}

function send_notification {
  volume=$(get_volume)
  bar=$(seq -s "â”€" $(($volume / 5)) | sed 's/[0-9]//g')
  dunstify -i audio-volume-medium-panel -t 8000 -r 2593 -u normal "    $bar"
}

case $1 in
  up)
    pamixer -i 5 >/dev/null
    send_notification
    ;;
  down)
    pamixer -d 5 >/dev/null
    send_notification
    ;;
  mute)
    # Toggle mute
    pamixer -t >/dev/null
    if is_mute; then
      dunstify -i audio-volume-muted-panel -t 8000 -r 2593 -u normal "Mute"
    else
      send_notification
    fi
    ;;
esac
